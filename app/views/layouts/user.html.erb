<!DOCTYPE html>
<html>
<head>
   <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <title>WishList</title>
  
  <link rel="stylesheet" href="/css/ui.all.css" type="text/css" media="screen" />
  <meta http-equiv="content-type" content="text/html; charset=iso-8859-1" />
    <link rel="stylesheet" href="/css/style.css" />
<script type="text/javascript" src="/js/jquery-1.7.1.js"></script>
<script type="text/javascript" src="/js/interaction.js"></script>
</head>
<body>
<div id="wrapper">
	<div id="header">
    	<div class="group">

            	<a href=""> <h1 class="logo-sales logo_bus"></h1></a>

            <div class="header_info">
                <!--<p class="activity friends"><a href="#" class="icons">Invite Friends</a></p>
                <p class="activity mobapp"><a href="#" class="icons">Mobile App</a></p>-->
                <!-- <span id="signup">Sign up</span>-->
                <!--<p class="login"><a href="#" class="icons" id="login">Login</a></p>-->
<% if (session[:user_id]).present? %>
                <div class="activity loggedinfo"><b><em>Logged in as </em> <%= getUserNamebyId(session[:user_id]) %>&nbsp;<%= getUserLastNamebyId(session[:user_id]) %></b><span class="caret"></span>
                	<div class="loglist">
                    	<div class="holder">
                        <div class="arrowup"></div>
                            <ul>
                              
                              <li> <td></td></li>
                            <li> <%= link_to "Profile Information" , profile_path(session[:user_id])%></li>
                             <li><%= link_to "Sign out", :signout %></li>

                            </ul>
                         </div>
                     </div>
                </div>
                <form action="#" method="get" class="activity loggedinfo">
<select name="locale" onchange="this.form.submit()">
    <option>Select Language</option>
    <option  value="en"  <%= (@user.locale=='en')?'selected="selected"':''%>>English</option>
    <option  value="rs" <%= (@user.locale=='rs')?'selected="selected"':''%>>Russian</option>
    <option  value="fn" <%= (@user.locale=='fn')?'selected="selected"':''%>>Finnish</option>
    <option  value="sd" <%= (@user.locale=='sd')?'selected="selected"':''%>>Swedish</option>
    <option  value="pl" <%= (@user.locale=='pl')?'selected="selected"':''%>>Polish</option>
   </select>
</form>
                <% end %>

           </div>
        </div>
    </div><!-- header ends-->
<div class="add-deal group">
<%= yield %>
   </div>
    <div id="footer">
    	<div class="content group">
        	<!--<div class="social group">
            	<span class="icons fb">
                	<a href="#"></a>
                </span>
                <span class="icons tw">
                	<a href="#"></a>
                </span>
            </div>-->
            <div class="footerlist group">
                <ul class="group bus">
                <!--    <li><a href="#">About Us</a></li>-->
                    <li><a href="#"><%= t :Contact%> watet.com</a></li>
                    <li class="last"><%#= link_to 'contect us', {:action => 'contact_us', :controller => "products"} %></li>
                </ul>
                <p>&<%= t :copy %>2011-2012 watet.com. <%= t :All_rights_reserved %></p>
            </div>
        </div>
    </div><!-- footer ends -->

  <%= yield(:script) -%>
<% unless flash[:notice].nil? and flash[:alert].nil? %>
<script type="text/javascript"> $(document).ready(function(){ $("#messages").fadeOut(2000); }); </script>
<% end %>
    </div>
</body>
</html>