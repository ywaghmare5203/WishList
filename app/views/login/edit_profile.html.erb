                    <%= f.password_field :password %>
                  <%=  f.hidden_field :change, :value=>@edit_profile.id  , :name=> "change"%>
                 <div class="clear"></div>
                 <label>Re-enter Password</label>
                    <%= f.password_field :password %>
                 <div class="clear"></div>
                 <div class="actions">
                   <%= f.submit "Change Password" %>
                 </div>

                 <% end %>
             </div><!--xbox ends-->

       </div>
